<%= tag.div(flash[:alert], style: "color:red")    if flash[:alert] %>
<%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>

<%= form_with url: session_path do |form| %>
  <%= form.text_field :phone, required: true, autofocus: true, autocomplete: "phone", placeholder: "Номер телефона", value: params[:phone] %><br>
  <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Пароль", maxlength: 72 %><br>
  <%= form.submit "Войти" %>
<% end %>
<br>

<%= link_to "Forgot password?", new_password_path %>
